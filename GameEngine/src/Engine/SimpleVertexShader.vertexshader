#version 330 core
layout(location = 4) in vec3 position;
layout(location = 5) in vec3 customColor;
out vec3 color;
in vec2 aTexCoord;
out vec2 TexCoord;

uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;

void main(){
color = customColor;
TexCoord = aTexCoord;
gl_Position = proj*view*model*vec4(position,1.0f);
}